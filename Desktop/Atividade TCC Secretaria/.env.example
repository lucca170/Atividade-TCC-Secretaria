# ========================
# CONFIGURAÇÕES DE E-MAIL
# ========================
# Para usar recuperação de senha, configure um servidor SMTP

# Gmail:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
# Nota: Use uma "Senha de App" do Gmail, não a senha da conta
# Acesse: https://myaccount.google.com/apppasswords
EMAIL_HOST_PASSWORD=sua-senha-app-gmail

# Outlook/Hotmail (alternativa):
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=seu-email@outlook.com
# EMAIL_HOST_PASSWORD=sua-senha

# SendGrid (alternativa):
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=SG.chave-sendgrid-aqui

# Endereço padrão de envio (opcional)
DEFAULT_FROM_EMAIL=seu-email@gmail.com
